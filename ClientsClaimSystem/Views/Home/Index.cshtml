@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-center mt-4">Welcome to the Claims System</h2>

<div class="d-flex justify-content-center my-4">
    <a class="btn btn-primary mx-2 custom-btn" href="/Claims/Submit">Submit Claims</a>
    <a class="btn btn-success mx-2 custom-btn" href="/Claims/Approved">Approved Claims</a>
    <a class="btn btn-danger mx-2 custom-btn" href="/Claims/Rejected">Rejected Claims</a>
    <a class="btn btn-warning mx-2 custom-btn" href="/Admin/CoordinatorClaimsLanding">Programme Coordinator Claims</a>
</div>

<!-- Logout Button -->
<div class="d-flex justify-content-center my-4">
    <form method="post" asp-action="Logout">
        <button type="submit" class="btn btn-danger mx-2 custom-btn">Logout</button>
    </form>
</div>

<style>
    /* General Styling */
    body {
        background-color: #f4f7fc;
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
        margin-top: 40px;
    }

    .text-center {
        text-align: center;
    }

    /* Button Styles */
    .custom-btn {
        padding: 14px 30px;
        font-size: 16px;
        font-weight: 500;
        border-radius: 25px;
        transition: all 0.3s ease;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
    }

    /* Individual Button Color Themes */
    .submit-btn {
        background-color: #4CAF50; /* Green */
        color: white;
    }

    .submit-btn:hover {
        background-color: #45a049;
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    .approved-btn {
        background-color: #28a745; /* Darker Green */
        color: white;
    }

    .approved-btn:hover {
        background-color: #218838;
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    .rejected-btn {
        background-color: #dc3545; /* Red */
        color: white;
    }

    .rejected-btn:hover {
        background-color: #c82333;
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    .coordinator-btn {
        background-color: #f0ad4e; /* Yellow */
        color: white;
    }

    .coordinator-btn:hover {
        background-color: #ec971f;
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    .logout-btn {
        background-color: #e74c3c; /* Red for logout */
        color: white;
    }

    .logout-btn:hover {
        background-color: #c0392b;
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    /* Button Container Styling */
    .d-flex {
        max-width: 1000px;
        margin: auto;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    /* Logout Section Styling */
    .my-4 {
        margin-top: 40px;
        margin-bottom: 40px;
    }

    
</style>
