@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-center mt-4">Welcome to the Claims System</h2>

<div class="d-flex justify-content-center my-4">
    <a class="btn btn-primary mx-2 custom-btn" href="/Claims/Submit">Submit Claims</a>
    <a class="btn btn-success mx-2 custom-btn" href="/Claims/Approved">Approved Claims</a>
    <a class="btn btn-danger mx-2 custom-btn" href="/Claims/Rejected">Rejected Claims</a>
    <a class="btn btn-warning mx-2 custom-btn" href="/Admin/CoordinatorClaimsLanding">Programme Coordinator Claims</a>
</div>

<!-- Logout Button -->
<div class="d-flex justify-content-center my-4">
    <form method="post" asp-action="Logout">
        <button type="submit" class="btn btn-danger mx-2 custom-btn">Logout</button>
    </form>
</div>

<style>
    /* General styling for buttons and text */
    .custom-btn {
        padding: 15px 30px;
        font-size: 18px;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.3s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
    }

        /* Hover effects for buttons */
        .custom-btn:hover {
            opacity: 0.8;
            transform: scale(1.05);
        }

    /* Styling for the body to look professional */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #343a40;
    }

    /* Centering the button group */
    .d-flex {
        max-width: 900px;
        margin: auto;
        justify-content: space-evenly;
    }

    /* Add spacing and alignment to the page */
    .text-center {
        font-weight: 600;
        color: #2c3e50;
    }

    .mt-4 {
        margin-top: 40px;
    }

    .my-4 {
        margin: 40px 0;
    }
</style>
