@model IEnumerable<ClientsClaimSystem.Models.Claim>

<h2 class="text-center mt-4">@(Model.FirstOrDefault()?.Status == "Approved" ? "Approved Claims" : "Rejected Claims")</h2>

<table class="claims-table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Description</th>
            <th>Submission Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>R@claim.HourlyRate</td>
                <td>R@((claim.HoursWorked * claim.HourlyRate).ToString("F2"))</td>
                <td>@claim.Description</td>
                <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary mt-3" href="/Admin/Verification">Back</a>

<style>
   
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7f6;
        margin: 0;
        padding: 20px;
    }

    h2 {
        color: #2c3e50;
        font-size: 2.5rem;
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 30px;
    }

    .mt-3 {
        margin-top: 20px;
    }

    .claims-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

        .claims-table th, .claims-table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .claims-table th {
            background-color: #2c3e50;
            color: #fff;
            font-size: 1.1rem;
        }

        .claims-table td {
            background-color: #fff;
            font-size: 1rem;
            color: #2c3e50;
        }

        .claims-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .claims-table td a {
            color: #3498db;
            text-decoration: none;
        }

            .claims-table td a:hover {
                text-decoration: underline;
            }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #2980b9;
        }

    .btn-secondary {
        background-color: #7f8c8d;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        font-size: 1rem;
        border-radius: 5px;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
        }

    .claims-table td,
    .claims-table th {
        font-weight: normal;
    }

        /* Table Data formatting */
        .claims-table td:nth-child(4),
        .claims-table th:nth-child(4) {
            font-weight: bold;
        }

        .claims-table td:nth-child(5) {
            font-style: italic;
        }

</style>
