@model ClientsClaimSystem.Models.Claim

<h2 class="text-center mt-4 text-success">Claim Submitted Successfully</h2>

<div class="claim-details my-4">
    <p><strong>Lecturer Name:</strong> @Model.LecturerName</p>
    <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
    <p><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Date Submitted:</strong> @Model.SubmissionDate.ToShortDateString()</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Document:</strong> <a href="/documents/@Model.DocumentPath" class="text-primary">View Document</a></p>
</div>

<a class="btn btn-secondary mt-3" href="/">Back to Home</a>

<style>
    /* Claim Submitted Successfully Page Styling */
    body {
        background-color: #f4f7f6;
        font-family: 'Arial', sans-serif;
        padding: 20px;
    }

    h2.text-success {
        color: #27ae60;
        font-size: 2.5rem;
        text-align: center;
        margin-top: 30px;
    }

    .claim-details {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
    }

        .claim-details p {
            font-size: 1.1rem;
            margin: 10px 0;
            color: #2c3e50;
        }

        .claim-details a {
            color: #3498db;
            text-decoration: none;
        }

            .claim-details a:hover {
                text-decoration: underline;
            }

    .btn-secondary {
        display: block;
        margin-top: 20px;
        background-color: #7f8c8d;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        font-size: 1rem;
        border-radius: 5px;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
        }

</style>