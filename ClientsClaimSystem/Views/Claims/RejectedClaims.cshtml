@model IEnumerable<ClientsClaimSystem.Models.Claim>

<h2 class="text-center mt-4 text-danger">Rejected Claims</h2>

<table class="claims-table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>R @claim.HourlyRate</td>
                <td>R@((claim.HoursWorked * claim.HourlyRate).ToString("F2"))</td>
                <!-- Corrected -->
                <td>@claim.Description</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Back</a>

<style>
    /* Rejected Claims Page Styling */
    body {
        background-color: #f4f7f6;
        font-family: 'Arial', sans-serif;
    }

    h2.text-danger {
        color: #e74c3c;
        font-size: 2.5rem;
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .claims-table {
        width: 100%;
        margin-top: 30px;
        border-collapse: collapse;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

        .claims-table th,
        .claims-table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .claims-table th {
            background-color: #2c3e50;
            color: #fff;
        }

        .claims-table td {
            background-color: #fff;
        }

        .claims-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .claims-table td a {
            color: #3498db;
            text-decoration: none;
        }

            .claims-table td a:hover {
                text-decoration: underline;
            }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background-color 0.3s;
        margin-top: 20px;
    }

        .btn:hover {
            background-color: #2980b9;
        }


</style>