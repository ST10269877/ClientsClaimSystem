@{
    ViewData["Title"] = "Programme Coordinator Claims";
}

<h2 class="title">Programme Coordinator Claims</h2>

<div class="button-container">
    <a class="btn custom-btn btn-primary" href="/Admin/Register">Register</a>
    <a class="btn custom-btn btn-success" href="/Admin/Login">Login</a>
</div>

<style>
    body {
        background-color: #e9ecef;
        font-family: 'Segoe UI', sans-serif;
    }

    .title {
        text-align: center;
        margin-top: 30px;
        color: #343a40;
        font-size: 28px;
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 50px;
    }

    .custom-btn {
        padding: 15px 30px;
        border-radius: 5px;
        font-size: 18px;
        font-weight: 600;
        color: white;
        text-decoration: none;
        transition: 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-success {
        background-color: #28a745;
    }

    .custom-btn:hover {
        opacity: 0.8;
    }
</style>
