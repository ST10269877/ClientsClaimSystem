@model IEnumerable<ClientsClaimSystem.Models.Claim>

<h2>Rejected Claims</h2>

<table class="claims-table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate.ToString("C")</td>
                <td>@claim.Description</td>
            </tr>
        }
    </tbody>
</table>

<a href="javascript:history.back()" class="btn btn-secondary">Back</a>


<style>
    h2.text-danger {
        color: #dc3545;
        font-weight: bold;
    }

    .claims-list {
        max-width: 600px;
        margin: auto;
    }

    .list-group-item {
        padding: 15px;
        font-size: 18px;
        color: #495057;
        background-color: #fff;
        border: 1px solid #dee2e6;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .rejected-item {
        border-left: 5px solid #dc3545;
        color: #dc3545;
    }

    .claim-item {
        display: block;
    }

    .small-btn {
        display: block;
        width: 100px;
        margin: 20px auto;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 5px;
    }
</style>
