@model IEnumerable<ClientsClaimSystem.Models.Claim>

<h2 class="text-center mt-4">Claims Verification</h2>

<table class="claims-table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate.ToString("C")</td>
                <td>@(claim.HoursWorked * claim.HourlyRate).ToString("C")</td>
                <td>@claim.Description</td>
                <td>@claim.SubmissionDate.ToString("d")</td>
                <td>
                    <form asp-action="ApproveClaim" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="claimID" value="@claim.ClaimID" />
                        <button type="submit" class="btn btn-success" @(claim.IsApproved ? "disabled" : "")>Approve</button>
                    </form>
                    <form asp-action="RejectClaim" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="claimID" value="@claim.ClaimID" />
                        <button type="submit" class="btn btn-danger" @(claim.IsApproved ? "disabled" : "")>Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-3">
    <form method="post" asp-action="Logout">
        <button type="submit" class="btn btn-secondary">Logout</button>
    </form>
</div>

<style>
    body {
        background-color: #f0f2f5;
        font-family: Arial, sans-serif;
    }

    .claims-table {
        width: 90%;
        margin: 40px auto;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .claims-table th, .claims-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

    .btn-success, .btn-danger {
        margin: 5px 0;
        padding: 8px 12px;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        border: none;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
    }
</style>
